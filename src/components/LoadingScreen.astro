---
import { Image } from "astro:assets";
import avion from "../assets/images/avion.png";
---

<div
  id="loading-screen"
  class="fixed top-0 left-0 w-full h-full bg-orange-400 z-50 flex flex-col justify-center items-center overflow-hidden">
  <Image
    id="loading-plane"
    src={avion}
    alt="Loading..."
    class="w-1/2 animate-fly"
  />
  <button
    id="enter-button"
    class="hidden mt-8 px-6 py-3 bg-white text-black font-bold rounded-lg shadow-lg hover:bg-orange-600 transition-colors duration-300">
    Ir a la invitaci√≥n
  </button>
</div>

<style>
  @keyframes fly {
    0% {
      transform: translateX(-150%);
    }
    100% {
      transform: translateX(150%);
    }
  }

  .animate-fly {
    animation: fly 2s ease-in-out forwards;
  }
</style>
